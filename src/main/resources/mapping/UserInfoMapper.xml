<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.UserInfoMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.entity.UserInfo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="inputTime" property="inputTime" jdbcType="TIMESTAMP"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="birthday" property="birthday" jdbcType="TIMESTAMP"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectUserList" parameterType="com.example.demo.entity.UserInfo" resultMap="BaseResultMap">
        select * from a_userInfo
    </select>

    <delete id="deleteUserInfo">
        delete from a_userInfo where id = #{id}
    </delete>

    <select id="selectInfoByName" parameterType="com.example.demo.entity.UserInfo" resultMap="BaseResultMap">
        select * from a_userInfo where name like CONCAT('%',#{name},'%')
    </select>

    <select id="selectInfoByAddress" parameterType="com.example.demo.entity.UserInfo" resultMap="BaseResultMap">
        select * from a_userInfo where address like CONCAT('%',#{address},'%')
    </select>

    <select id="selectPage" parameterType="com.example.demo.entity.UserInfo" resultMap="BaseResultMap">
        select * from a_userInfo limit #{page}, #{size}
    </select>
    
    <select id="getTotal" resultType="java.lang.Long">
        select count(*) from a_userInfo
    </select>

    <insert id="addUserInfo" parameterType="com.example.demo.entity.UserInfo">
        insert into a_userInfo(inputTime,name,phone,birthday,address)
        values (#{inputTime},#{name},#{phone},#{birthday},#{address})
    </insert>
</mapper>